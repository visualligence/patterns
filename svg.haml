%svg{ :width => "500px", :height => "500px", "xmlns:svg" => "http://www.w3.org/2000/svg", :xmlns => "http://www.w3.org/2000/svg" }
	-# :style => '-webkit-transform: perspective(1000) rotateY(60deg);' }
	%rect{ :x => '0%',
		:y => '0%',
		:width => '100%',
		:height => '100%',
		:style => 'fill:white;' }
	%g{ :transform => "translate(0,0)", :style => "font-family:Verdana; font-size: 10pt; " }
		-if ( data.size == 0 || data[0].keys.size.to_f == 0)
			%text{ :x => '0', :y => '100%' }
				= "Empty data set"
		-else
			= yield
